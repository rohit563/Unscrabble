<meta name="viewport" content="width=device-width, initial-scale=0.9">
<body id = "login">
  <div class="wrapper">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
      <%= devise_error_messages! %>
      <h2 class="form-signin-heading">Password Reset</h2>
      <div class="field">
        <%= f.email_field :email, autofocus: true, name: "username", placeholder: "Email Address", class: 'form-control' %>
      </div>
    
      <div class="actions">
        <%= f.submit "Send", class: 'btnTwo btn-default btn-lg' %>
      </div>
    <% end %>
  </div>
</body>

